{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.worker.tsbuildinfo",
    // Keep only known ambient type packages here. Local .d.ts files should be
    // picked up via `include` or by using `typeRoots`.
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  // Ensure local worker typings are included so the compiler sees them
  "include": ["src/worker", "src/worker/worker-configuration.d.ts"]
}
